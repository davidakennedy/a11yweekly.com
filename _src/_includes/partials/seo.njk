{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(metadata.url) }}{%- endset -%}
{%- set isIssue = layout == 'issue' -%}

{# Page-Specific #}
<meta name="description" content="{{ renderData.description or description or metadata.description }}">
<meta property="og:title" content="{{ title or metadata.title }}">
<meta property="og:description" content="{{ description or metadata.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:image" content="{%- if image -%}{{ image | imgPath | url | absoluteUrl(metadata.url) }}{%- elseif isIssue and not image -%}{{ metadata.author.avatarlarge | url | absoluteUrl(metadata.url) }}{%- else -%}{{ metadata.author.avatar | url | absoluteUrl(metadata.url) }}{%- endif -%}">
<meta name="twitter:card" content="{%- if image -%}summary_large_image{%- elseif isIssue and not image -%}summary_large_image{%- else -%}{{ summary }}{%- endif -%}">

{# Issues get additional meta tags #}
{%- if isIssue -%}
    <meta property="og:type" content="article">
    <meta property="article:published_time" content="{{ page.date | htmlDateString }}">
{%- endif -%}

{# General #}
<meta name="author" content="{{ metadata.author.name }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:locale" content="{{ metadata.locale }}">
<meta name="twitter:site" content="@{{ metadata.author.social.twitter.name }}">
<meta name="twitter:creator" content="@{{ metadata.author.name }}">

<link rel="canonical" href="{{ absolutePageUrl }}">
